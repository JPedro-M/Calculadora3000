<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryC"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Calculadora 3000"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/etQuest1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitulo"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:hint="Valor 1"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/etQuest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etQuest1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:hint="Valor 2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btSomar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etQuest2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/secondaryC"
            android:text="Somar"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btSubtrair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btSomar"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/secondaryC"
            android:text="Subtrair"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btMultiplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btSubtrair"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/secondaryC"
            android:text="Multiplicar"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btDividir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btMultiplicar"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/secondaryC"
            android:text="Dividir"

            android:textSize="20dp" />
    </RelativeLayout>


</ScrollView>